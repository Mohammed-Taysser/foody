#!/usr/bin/env sh

# Abort on any error
set -e

# Check if TERM is set; if not, set a default
if [ -z "$TERM" ]; then
  export TERM=xterm-256color
fi

# ANSI color codes
RED="$(tput setaf 1)"
GREEN="$(tput setaf 2)"
YELLOW="$(tput setaf 3)"
RESET="$(tput sgr0)"

# 1. Check for any staged files at all
if git diff --cached --quiet; then
  printf "\n${YELLOW}→ No staged files to lint. Skipping pre-commit checks.${RESET}\n"
  exit 0
fi

printf "\n${YELLOW}→ Running lint-staged ...${RESET}\n"
npx lint-staged

printf "\n${YELLOW}→ Checking missing translations ...${RESET}\n"
npm run i18n:check-duplicate

printf "\n${GREEN}✔ All pre-commit checks passed!${RESET}\n"
exit 0
